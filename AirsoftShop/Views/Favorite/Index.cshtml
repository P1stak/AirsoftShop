@model List<ProductViewModel>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="~/css/products-grid.css" />

@if (Model == null || Model.Count == 0)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 70vh;">
        <div class="empty-favorites">
            <div class="heart-icon">
                <i class="far fa-heart"></i>
            </div>
            <h2>Ваш список избранного пуст</h2>
            <p>Сохраняйте понравившиеся товары в избранное, чтобы вернуться к ним позже</p>
            <a class="btn-catalog" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-arrow-left"></i>Перейти в каталог
            </a>
        </div>
    </div>
}
else
{
    <div class="products-grid-container">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <div class="product-image-wrapper">
                    <img class="product-image" src="@product.ImageUrl" alt="@product.Name">
                </div>
                <div class="product-info">
                    <div class="product-title text-center">@product.Name</div>
                    <div class="product-description text-center">@product.Descriprion</div>
                    <div class="product-price text-center">@product.Cost ₽</div>
                    <div class="btn-container">
                        <a class="btn btn-cart" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" role="button">
                            <i class="fas fa-plus"></i>
                        </a>
                        <a class="btn btn-favorite" asp-area="" asp-controller="Favorite" asp-action="Remove" asp-route-productId="@product.Id" role="button">
                            <i class="fas fa-minus"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}