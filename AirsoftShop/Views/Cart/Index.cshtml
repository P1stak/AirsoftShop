@model Cart

<link rel="stylesheet" href="~/css/site.css" />

@if (Model == null)
{
    <h3>
        Корзина пуста
    </h3>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена руб.</th>
                        <th>Количество</th>
                        <th>Стоимость руб.</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.Cost</td>
                            <td>@item.Amount</td>
                            <td>@item.Cost</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-lg-end">
                <h3>Итого:</h3>
                <h3>@Model.Cost</h3>
            </div>
            <div class="text-lg-end">
                <a asp-controller="Home" asp-action="Index" class="btn btn-dark return-to-catalog">Вернуться в каталог</a>
            </div>
        </div>
    </div>
}

