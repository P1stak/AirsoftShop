@model Register

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <form asp-controller="Account" asp-action="Register" method="post" class="border p-4 rounded" style="width: 300px;">
        <h1 class="text-center">Регистрация</h1>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="Email" class="text-danger"></span>
            <div id="emailHelp" class="form-text">Мы никогда никому не передадим вашу почту.</div>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Пароль</label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="form-text">6-20 символов, минимум 1 заглавная, 1 цифра и 1 спецсимвол</div>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Повторите пароль</label>
            <input asp-for="ConfirmPassword" class="form-control">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        </div>

        <div class="d-flex justify-content-center mt-2">
            <a href="/Account/Login" class="text-muted">Уже зарегистрированы? Войти</a>
        </div>
    </form>
</div>

<!-- Validation Scripts (лучше добавить в _Layout.cshtml) -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



