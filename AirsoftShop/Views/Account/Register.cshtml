@model AirsoftShop.Models.RegisterViewModel

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">

    <form asp-controller="Account" asp-action="Register" method="post" class="border p-4 rounded" style="width: 300px;">

        @Html.AntiForgeryToken()

        <h1 class="text-center mb-4">Регистрация</h1>

        <div class="text-danger form-text-weight-bold" asp-validation-summary="ModelOnly"></div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="test@test.com">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Пароль</label>
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Повторите пароль</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UserName" class="form-label">Ваше имя</label>
            <input asp-for="UserName" class="form-control" placeholder="Иванов Иван Иванович">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Телефон</label>
            <input asp-for="Phone" class="form-control" placeholder="+7 666 228 14 88">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-2">Зарегистрироваться</button>

        <a asp-area="" asp-controller="Account" asp-action="Login" class="text-muted d-block text-center">Уже зарегистрированы? Войти</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}