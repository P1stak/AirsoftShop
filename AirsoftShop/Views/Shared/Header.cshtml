<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">AirsoftShop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 align-items-center">

                    <li class="nav-item">
                        <a class="nav-link text-dark custom-nav-link d-flex align-items-center" href="/">
                            <i class="fas fa-home me-1"></i>
                        </a>
                    </li>


                    <!-- Поле поиска с улучшенным стилем -->
                    <li class="nav-item flex-grow-1 mx-3">
                        <div class="search-container position-relative" style="max-width: 500px; margin: 0 auto;">
                            <form asp-area="" asp-controller="Product" asp-action="SearchProduct" method="get" class="w-100">
                                <div class="input-group">
                                    <input type="text"
                                           class="form-control search-input py-2 px-3"
                                           placeholder="Поиск товаров..."
                                           name="searchString"
                                           style="border-radius: 20px; border: 1px solid #ced4da; padding-right: 40px;">
                                    <button class="btn btn-link text-primary search-button position-absolute"
                                            type="submit"
                                            style="right: 10px; top: 50%; transform: translateY(-50%); z-index: 5;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                        </svg>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark custom-nav-link d-flex align-items-center favorite-link" asp-area="" asp-controller="Favorite" asp-action="Index">
                            <i class="fas fa-heart me-1"></i>
                            <span class="badge ms-1" id="cartItemCount">@await Component.InvokeAsync("CalcFavoriteProductsCount")</span>
                        </a>
                    </li>



                    <li class="nav-item ms-auto">
                        <a class="nav-link text-dark custom-nav-link d-flex align-items-center" asp-area="" asp-controller="Cart" asp-action="index">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="badge ms-1" id="cartItemCount">@await Component.InvokeAsync("Cart")</span>
                        </a>
                    </li>


                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @if (User.IsInRole(Constants.AdminRoleName))
                            {
                                <span class="text-danger fw-bold">@User.Identity.Name.Split('@')[0]</span>
                            }
                            else
                            {
                                <span class="text-dark">@User.Identity.Name.Split('@')[0]</span>
                            }
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark custom-nav-link d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Logout">  
                                <i class="fas fa-sign-in-alt me-1"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark custom-nav-link d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Login">  
                                <i class="fas fa-sign-in-alt me-1"></i>
                            </a>
                        </li>
                    }

                    @if (User.IsInRole(Constants.AdminRoleName))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark custom-nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">
                                <i class="fas fa-user-cog"></i>
                            </a>
                        </li>   
                    }

                </ul>
            </div>
        </div>
    </nav>
    <style>
        .search-input:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            outline: none;
        }

        .search-button:hover {
            color: #0b5ed7 !important;
        }

        .search-button:focus {
            outline: none;
            box-shadow: none;
        }

        .favorite-link i {
            color: red;
        }

    </style>
</header>
