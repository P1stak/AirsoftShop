@model List<OrderViewModel>

<div class="admin-panel">
    <div class="row">
        @await Html.PartialAsync("AdminLeftMenu")
        <div class="col-9">
            <div class="admin-content">
                <h3 class="text-center mb-4">Список заказов</h3>

                @if (Model == null || Model.Count == 0)
                {
                    <div class="empty-list-container">
                        <h6>Пока список заказов пуст</h6>
                    </div>
                }
                else
                {
                    <div style="overflow-x:hidden;">
                        <table class="order-table">
                            <thead>
                                <tr>
                                    <th>№</th>
                                    <th>Сумма</th>
                                    <th>Статус</th>
                                    <th>Пользователь (логин)</th>
                                    <th>Дата</th>
                                    <th>Время</th>
                                    <th style="min-width: 200px;">Действие</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@Model[i].TotalCost.ToString("C")</td>
                                        <td>@EnumHelper.GetDisplayName(Model[i].Status)</td>
                                        <td>@User.Identity.Name</td>
                                        <td>@Model[i].CreateDateTime.ToString("dd.MM.yyyy")</td>
                                        <td>@Model[i].CreateDateTime.ToString("HH:mm:ss")</td>
                                        <td class="action-buttons">
                                            <a asp-area="Admin" asp-controller="Order" asp-action="Detail" asp-route-orderId="@Model[i].Id" class="btn btn-warning btn-sm btn-custom">Подробнее</a>
                                            <a asp-area="Admin" asp-controller="Order" asp-action="RemoveOrder" asp-route-orderId="@Model[i].Id" class="btn btn-danger btn-sm btn-custom">Удалить</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>